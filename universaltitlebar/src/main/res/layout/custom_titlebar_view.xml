<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <application.android.com.universaltitlebar.SkinImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_68" />

    <RelativeLayout
        android:id="@+id/custom_titlebar_context"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_marginTop="@dimen/dp_24">

        <RelativeLayout
            android:id="@+id/custom_title_back"
            android:layout_width="@dimen/dp_22"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/custom_title_back_img"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/custom_title_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_22"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textColor="#1E1E1E"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/custom_title_right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/custom_title_right_imgleft"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center_vertical"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/custom_title_right_img"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_24"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/custom_title_right_rl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/custom_title_right_search_file"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:visibility="gone" />

            <TextView
                android:id="@+id/custom_title_right_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_toRightOf="@+id/custom_title_right_search_file"
                android:text="扫描"
                android:textSize="16dp"
                android:visibility="gone" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/custom_title_cut"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/custom_title_cut_img"
                android:layout_width="@dimen/dp_14"
                android:layout_height="@dimen/dp_14"
                android:clickable="false"
                android:visibility="visible" />

            <TextView
                android:id="@+id/custom_title_cut_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_toRightOf="@id/custom_title_cut_img"
                android:clickable="false"
                android:textSize="@dimen/sp_16"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/custom_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="middle"
            android:gravity="center"
            android:maxWidth="@dimen/dp_216"
            android:singleLine="true"
            android:text=""
            android:textSize="@dimen/sp_18" />

        <View
            android:id="@+id/custom_bar_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>